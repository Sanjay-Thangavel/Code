//https://practice.geeksforgeeks.org/problems/find-minimum-and-maximum-element-in-an-array4428/1#


struct pair getMinMax(long long int arr[], long long int n) {
    int i;
    struct pair ans;
    ans.max=arr[0];//max
    ans.min=arr[0];
    for (i=0;i<n;i++){
        if (ans.max<arr[i]){
            ans.max=arr[i]; //max
        }}
     for (i=0;i<n;i++){
        if (ans.min>arr[i]){
            ans.min=arr[i]; //max
        }}
   // printf("min = %d, max= %d",min,max);
    return ans;
